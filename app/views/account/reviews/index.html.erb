<div class="container-fluid">
  <table class="table table-hover">
    <thead>
      <th>#</th>
      <th>Cover</th>
      <th>Movie</th>
      <th>Content</th>
      <th colspan="2">Created Date</th>
    </thead>

    <tbody>

      <% @reviews.each do |review| %>
        <tr>
          <td>#</td>
          <td><img src="<%=review.movie.cover_url%>" height="100"></td>
          <td><%= review.movie.title %></td>
          <td><%= review.content %></td>
          <td><%= review.updated_at %></td>
          <td><%= link_to("Delete", account_review_path(review), method: :delete, class: "btn btn-primary") %></td>
        </tr>
      <% end %>

    </tbody>
  </table>

</div>
