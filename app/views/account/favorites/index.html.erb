<div class="container">
  <table class="table table-hover">
    <thead>
      <th>Cover</th>
      <th>Name</th>
      <th>Brief</th>
      <th colspan="3">Creator</th>
    </thead>
    <tbody>
      <% if @favorites %>
      <% @favorites.each do |favorite| %>
        <tr>
          <td><%=link_to(image_tag(favorite.movie.cover_url , height:100), movie_reviews_path(favorite.movie))%></td>

          <td><%= favorite.movie.title %></td>
          <td><%= favorite.movie.brief %></td>
          <td><%= favorite.user.email %></td>
          <td><%=  link_to("un-favorite",account_favorite_unfavorite_path(favorite), method: :post, class:"btn btn-primary") %></td>
        </tr>
      <% end %>

      <% else %>
      <tr>
        <td><h2>NO FAVORITES</h2></td>
      </tr>
      <%end %>


    </tbody>
  </table>
</div>
