<div class="col-md-12">
  <table class="table">
    <thead>
      <th>#</th>
      <th>Title</th>
      <th>Description</th>
      <th>Post Count</th>
      <th>Creator</th>
      <th>Last update</th>
    </thead>
    <tbody>
      <% if current_user %>
        <% @current_user.participated_groups.each do |group| %>
          <tr>
            <td>#</td>
            <td><%= link_to(group.title, group_path(group)) %></td>
            <td><%= group.description %></td>
            <td><%= group.posts.count %></td>
            <td><%= group.user.email %></td>
            <td><%= group.updated_at %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
